<div class="main-content">
    <h1 class="list-title">投稿一覧</h1>

    <% @posts.each do |post| %>
        <div class="content">
            <div class="content-title">
                <h2><%= link_to post.title, post_path(post.id), method: :get %></h2>
            </div>
            <div class="content-contributor">投稿者：Uemura</div>
            <div class="content-tag">
                <ul class="tag-list">
                    Tags:
                    <li>切削</li>
                    <li>旋盤加工</li>
                    <li>SS400</li>
                </ul>
            </div>
        </div>
    <% end %>

</div>