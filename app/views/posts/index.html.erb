<div class="main-content">
    <h1 class="list-title">投稿一覧</h1>

    <% @posts.each do |post| %>
        <div class="content">
            <div class="content-title">
                <h2><%= link_to post.title, post_path(post.id), method: :get %></h2>
            </div>

            <div class="more">
                <span><%= image_tag 'arrow_gumi.png' %></span>
                <ul class="more_list">
                    <li>
                        <%= link_to '削除', post_path(post.id), method: :delete %>
                    </li>
                </ul>
            </div>

            <div class="content-contributor">投稿者：Uemura</div>
            <div class="content-tag">
                <ul class="tag-list">
                    Tags:
                    <% post.tag_list.each do |tag| %>
                        <li><%= tag %></li>
                    <% end %>
                </ul>
            </div>
            
        </div>
    <% end %>

</div>